<resources>


    <style name="MyToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColor">@color/grey_50</item>
    </style>

    <style name="MyDarkToolbarStylePopup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/grey_50</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TextViewTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextViewNormal">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonNormal">
        <item name="android:textColor">@color/grey_50</item>
        <item name="android:background">@drawable/custom_button_ocr</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>


</resources>
